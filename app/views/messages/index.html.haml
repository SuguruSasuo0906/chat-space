.contents

  .left-contents
    = render 'shared/side_bar'

  .right-contents

    .right-up-contents
      .right-up-left-contents
        %p.right-user-group
          = @group.name
        %p.right-user-name
          - @group.users.each do |user|
            = user.name
      %a
        .right-up-right-contents
          = link_to "edit", edit_group_path(@group)

    .right-middle-contents
      = render @messages

    .right-down-contents
      = form_for [@group, @message], html: {class: 'message-box'},id:"new_message" do |f|
        = f.text_field :content, class: 'message',placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'


